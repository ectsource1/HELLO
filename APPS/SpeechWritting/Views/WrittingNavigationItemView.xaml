<UserControl x:Class="SpeechWritting.Views.WrittingNavigationItemView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" 
    xmlns:controls="clr-namespace:SpeechControls;assembly=SpeechControls" 
    d:DesignHeight="300" d:DesignWidth="400">

    <Grid x:Name="LayoutRoot">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <RadioButton x:Name="NavigateToWrittingRadioButton" GroupName="MainNavigation" Click="NavigateToWrittingRadioButton_Click" 
          Style="{StaticResource MainViewRadioButtonStyle}" AutomationProperties.AutomationId="WrittingRadioButton">English Writting</RadioButton>
    </Grid>
</UserControl>
